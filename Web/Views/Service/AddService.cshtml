@using HotelProject.Business.Responses.Service
@using HotelProject.Entities.Dto_s.ServiceDto
@model HotelProject.Business.Requests.Service.AddServiceRequest
@{
    Layout = "_Layout";
}

<form method="post" enctype="multipart/form-data" asp-action="AddService" asp-controller="Service">
    <div class="input-group flex-nowrap">
        <input asp-for="Title" class="form-control" placeholder="Title" aria-label="Title" required>
    </div>
    <div class="input-group flex-nowrap">
        <input asp-for="Icon" class="form-control" placeholder="Icon" aria-label="Icon" required>
    </div>
    <div class="input-group flex-nowrap">
        <input asp-for="Description" class="form-control" placeholder="Description" aria-label="Description" required>
    </div>

    <button type="submit" class="btn btn-primary">Ekle</button>
</form>
