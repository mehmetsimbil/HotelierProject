@using HotelProject.Business.Responses.Subscribe
@using HotelProject.Entities.Dto_s.SubscribeDto

@model List<SubscribeListItemDto>
@{
    Layout = "_Layout";
}

<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Mail</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="color:blue">@item.Id</td>
                <td style="color:red">@item.Mail</td>
                <td>
                    <a asp-action="GetById" asp-controller="Subscribe" asp-route-id="@item.Id" class="btn btn-success">Güncelle</a>
                    <form asp-action="DeleteSubscribe" asp-controller="Subscribe" method="post" style="display:inline;">
                        <input type="hidden" name="Id" value="@item.Id" />
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Bu kaydı silmek istediğinize emin misiniz?');">Sil</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
