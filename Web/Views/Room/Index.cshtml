@using HotelProject.Business.Responses.Room
@using HotelProject.Entities.Dto_s.RoomDto

@{
    Layout = "_Layout";
}

<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Room Number</th>
            <th scope="col">Room Cover Image</th>
            <th scope="col">Price</th>
            <th scope="col">Title</th>
            <th scope="col">Bath Count</th>
            <th scope="col">Bed Count</th>
            <th scope="col">Wifi</th>
            <th scope="col">Description</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="color:blue">@item.Id</td>
                <td style="color:red">@item.RoomNumber</td>
                <td style="color:red">@item.RoomCoverImage</td>
                <td style="color:red">@item.Price</td>
                <td style="color:red">@item.Title</td>
                <td style="color:red">@item.BathCount</td>
                <td style="color:red">@item.BedCount</td>
                <td style="color:red">@item.Wifi</td>
                <td style="color:red">@item.Description</td>
                <td>
                    <a asp-action="GetById" asp-controller="Room" asp-route-id="@item.Id" class="btn btn-success">Güncelle</a>
                    <form method="post" asp-action="DeleteRoom" asp-controller="Room" style="display:inline;">
                        <input type="hidden" name="Id" value="@item.Id" />
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Bu kaydı silmek istediğinize emin misiniz?');">Sil</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
