@using HotelProject.Business.Responses.MessageCategory
@using HotelProject.Entities.Dto_s.MessageCategoryDto

@model List<MessageCategoryListItemDto>
@{
    Layout = "_Layout";
}

<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Contact</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row" style="color:blue">
                    @item.Id
                </th>
                <th scope="row" style="color:red">
                    @item.MessageCategoryName
                </th>
                <th scope="row" style="color:red">
                    @item.Contacts
                </th>
                
                <th>
                 
                    <form method="post" action="@Url.Action("DeleteMessageCategory", "MessageCategory")" style="display:inline;">
                        <input type="hidden" name="Id" value="@item.Id" />
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Bu kaydı silmek istediğinize emin misiniz?');">Sil</button>
                    </form>
                </th>
            </tr>
        }
    </tbody>

</table>