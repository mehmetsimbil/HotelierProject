@using HotelProject.Business.Responses.About
@using HotelProject.Entities.Dto_s.AboutDto
@model HotelProject.Business.Requests.About.AddAboutRequest


<div style="margin-top:10%">
<form asp-action="AddAbout" asp-controller="About" method="post" enctype="multipart/form-data">

    <div class="input-group flex-nowrap">
        <input type="text" class="form-control" asp-for="Title1" placeholder="Title1" aria-label="Title1" />
    </div>

    <div class="input-group flex-nowrap">
        <input type="text" class="form-control" asp-for="Title2" placeholder="Title2" aria-label="Title2" />
    </div>

    <div class="input-group flex-nowrap">
        <input type="text" class="form-control" asp-for="Content" placeholder="Content" aria-label="Content" />
    </div>

    <div class="input-group flex-nowrap">
        <input type="number" class="form-control" asp-for="RoomCount" placeholder="RoomCount" aria-label="RoomCount" />
    </div>

    <div class="input-group flex-nowrap">
        <input type="number" class="form-control" asp-for="StaffCount" placeholder="StaffCount" aria-label="StaffCount" />
    </div>

    <div class="input-group flex-nowrap">
        <input type="number" class="form-control" asp-for="CustomerCount" placeholder="CustomerCount" aria-label="CustomerCount" />
    </div>

    <button type="submit" class="btn btn-primary">Ekle</button>
</form>
</div>