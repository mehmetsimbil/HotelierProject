@using HotelProject.Business.Responses.Staff
@using HotelProject.Entities.Dto_s.StaffDto

@model List<StaffListItemDto>
@{
    Layout = "_Layout";
}

<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Title</th>
            <th scope="col">Image</th>
            <th scope="col">Github</th>
            <th scope="col">Instagram</th>
            <th scope="col">Linkedin</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="color:blue">@item.Id</td>
                <td style="color:red">@item.Name</td>
                <td style="color:red">@item.Title</td>
                <td style="color:red">@item.Image</td>
                <td style="color:red">@item.Github</td>
                <td style="color:red">@item.Instagram</td>
                <td style="color:red">@item.Linkedin</td>
                <td>
                    <a asp-action="GetById" asp-controller="Staff" asp-route-id="@item.Id" class="btn btn-success">Güncelle</a>
                    <form method="post" asp-action="DeleteStaff" asp-controller="Staff" style="display:inline;">
                        <input type="hidden" name="Id" value="@item.Id" />
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Bu kaydı silmek istediğinize emin misiniz?');">Sil</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
