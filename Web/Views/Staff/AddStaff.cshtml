@using HotelProject.Business.Responses.Staff
@using HotelProject.Entities.Dto_s.StaffDto
@model HotelProject.Business.Requests.Staff.AddStaffRequest
@{
    Layout = "_Layout";
}

<form method="post" asp-action="AddStaff" asp-controller="Staff" enctype="multipart/form-data">
    <div class="input-group flex-nowrap">
        <input asp-for="Name" class="form-control" placeholder="Name" aria-label="Name" required>
    </div>
    <div class="input-group flex-nowrap">
        <input asp-for="Title" class="form-control"  placeholder="Title" aria-label="Title" required>
    </div>
    <div class="input-group flex-nowrap">
        <input asp-for="Image" class="form-control" placeholder="Image" aria-label="Image" required>
    </div>
    <div class="input-group flex-nowrap">
        <input asp-for="Github" class="form-control"  placeholder="Github" aria-label="Github">
    </div>
    <div class="input-group flex-nowrap">
        <input asp-for="Instagram" class="form-control"  placeholder="Instagram" aria-label="Instagram">
    </div>
    <div class="input-group flex-nowrap">
        <input asp-for="Linkedin" class="form-control"  placeholder="Linkedin" aria-label="Linkedin">
    </div>

    <button type="submit" class="btn btn-primary">Ekle</button>
</form>
