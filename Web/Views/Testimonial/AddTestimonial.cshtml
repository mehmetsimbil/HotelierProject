@using HotelProject.Business.Responses.Testimonial
@using HotelProject.Entities.Dto_s.TestimonialDto
@model HotelProject.Business.Requests.Testimonial.AddTestimonialRequest
@{
    Layout = "_Layout";
}

<form asp-action="AddTestimonial" asp-controller="Testimonial" method="post" enctype="multipart/form-data">
    <div class="input-group flex-nowrap">
        <input type="text" class="form-control" asp-for="Name" placeholder="Name" aria-label="Name" required />
    </div>
    <div class="input-group flex-nowrap">
        <input type="text" class="form-control" asp-for="Title" placeholder="Title" aria-label="Title" required />
    </div>
    <div class="input-group flex-nowrap">
        <input type="text" class="form-control" asp-for="Description" placeholder="Description" aria-label="Description" required />
    </div>

    <button type="submit" class="btn btn-primary">Ekle</button>
</form>
