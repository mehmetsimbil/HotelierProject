@using HotelProject.Business.Responses.SendMessage
@using HotelProject.Entities.Dto_s.SendMessageDto

@model List<SendMessageListItemDto>
@{
    Layout = "_Layout";
}

<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Receiver Name</th>
            <th scope="col">Receiver Mail</th>
            <th scope="col">Sender Name</th>
            <th scope="col">Sender Mail</th>
            <th scope="col">Title</th>
            <th scope="col">Content</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="color:blue">@item.Id</td>
                <td style="color:red">@item.ReceiverName</td>
                <td style="color:red">@item.ReceiverMail</td>
                <td style="color:red">@item.SenderName</td>
                <td style="color:red">@item.SenderMail</td>
                <td style="color:red">@item.Title</td>
                <td style="color:red">@item.Content</td>
                <td>
                    <a asp-action="GetById" asp-controller="SendMessage" asp-route-id="@item.Id" class="btn btn-success">Güncelle</a>
                    <form method="post" asp-action="DeleteSendMessage" asp-controller="SendMessage" style="display:inline;">
                        <input type="hidden" name="Id" value="@item.Id" />
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Bu kaydı silmek istediğinize emin misiniz?');">Sil</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
