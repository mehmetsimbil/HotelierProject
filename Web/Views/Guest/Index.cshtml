@using HotelProject.Business.Responses.Guest
@using HotelProject.Entities.Dto_s.GuestDto

@model List<GuestListItemDto>
@{
    Layout = "_Layout";
}

<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Surname</th>
            <th scope="col">City</th>
          
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="color:blue">@item.Id</td>
                <td style="color:red">@item.Name</td>
                <td style="color:red">@item.Surname</td>
                <td style="color:red">@item.City</td>
                <td>
                    <a asp-action="GetById" asp-controller="Guest" asp-route-id="@item.Id" class="btn btn-success">Güncelle</a>
                    <form method="post" asp-action="DeleteGuest" asp-controller="Guest" style="display:inline;">
                        <input type="hidden" name="Id" value="@item.Id" />
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Bu kaydı silmek istediğinize emin misiniz?');">Sil</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
